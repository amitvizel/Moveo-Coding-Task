// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CacheType {
  prices
  news
  meme
  aiInsight
}

enum FeedbackContentType {
  NEWS
  AI_INSIGHT
  MEME
  COIN_PRICE
}

enum VoteType {
  UP
  DOWN
}

model User {
  id            String           @id @default(uuid())
  email         String           @unique
  passwordHash  String
  name          String?
  preferences   Json?            // Storing preferences as JSON for flexibility
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  dashboardCache DashboardCache[]
  feedback      Feedback[]
}

model DashboardCache {
  id        String    @id @default(uuid())
  userId    String
  cacheType CacheType
  data      Json      // Stores the cached data for this specific type
  fetchedAt DateTime  @default(now())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, cacheType])
  @@index([userId, cacheType, fetchedAt])
}

model Feedback {
  id          String              @id @default(uuid())
  userId      String
  contentType FeedbackContentType
  contentId   String              // ID of news, or date/hash for daily content
  vote        VoteType
  createdAt   DateTime            @default(now())

  user        User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, contentType])
}
